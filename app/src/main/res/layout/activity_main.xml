<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:id="@+id/image_view"></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_to_display"
        android:text="Text from the Image will be shown Here"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="26dp"
        android:layout_margin="10dp"
        android:layout_below="@id/image_view">
    </TextView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/capture_image"
        android:layout_below="@id/text_to_display"
       android:layout_marginTop="20dp"
        android:text="Capture"
        android:textAllCaps="true"
        android:textSize="25sp"


        ></Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detect_text"
        android:layout_alignParentBottom="true"
        android:text="Detect"
       android:layout_above="@id/capture_image"
        android:textSize="25sp"
        android:textAllCaps="true"
        ></Button>
</RelativeLayout>